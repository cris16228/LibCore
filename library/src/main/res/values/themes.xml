<resources>
    <!-- Base application theme. -->
    <style name="Theme.Library" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item> <!-- 60% Dominant -->
        <item name="colorSecondary">@color/colorSecondary</item> <!-- 30% Secondary -->
        <item name="colorAccent">@color/colorAccent</item> <!-- 10% Accent -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MaterialAlertDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:background">@color/app_background</item>
    </style>

    <style name="Theme.MainTheme.BlendStatusBar" parent="Theme.MainTheme">

        <item name="android:statusBarColor">@color/app_background</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>